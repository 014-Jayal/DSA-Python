class Solution:
    def equalSumSpan(self, a1, a2):
        n = len(a1)
        
        prefix = 0
        max_len = 0
        first_index = {}
        
        for i in range(n):
            # Build difference prefix directly
            prefix += (a1[i] - a2[i])
            
            # If prefix becomes 0, span from 0 to i works
            if prefix == 0:
                max_len = i + 1
            
            # If we've seen this prefix before
            if prefix in first_index:
                length = i - first_index[prefix]
                max_len = max(max_len, length)
            else:
                # Store first occurrence only
                first_index[prefix] = i
        
        return max_len
        
